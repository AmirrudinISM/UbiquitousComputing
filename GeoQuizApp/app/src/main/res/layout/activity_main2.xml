<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/statusDisplay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/question2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:text="Question 2"
        android:textAlignment="center"
        android:textSize="30dp"

        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="302dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:text="In which state is the University of Wollongong located?"
        android:textSize="20dp"
        android:textAlignment="center"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/nsw"
            android:layout_width="150dp"
            android:height="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="New South Whales"
            android:textAllCaps="false"
            android:layout_margin="10dp"

            ></Button>
        <Button
            android:id="@+id/sa"
            android:layout_width="150dp"
            android:height="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="South Australia"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            ></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/vic"
            android:layout_width="150dp"
            android:height="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Victoria"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            ></Button>
        <Button
            android:id="@+id/nt"
            android:layout_width="150dp"
            android:height="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Northern Territory"
            android:textAllCaps="false"

            ></Button>
    </LinearLayout>
</LinearLayout>